@model MovieModel.Users
@{
    ViewBag.Title = Model.Nickname + "-用户信息";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="mdui-col-md-4 mdui-p-x-0">
    <div class="mdui-card" style="margin:15px auto;">
        <div style="position:relative;">
            <img src="/images/bg_user.jpg" style="width:100%; position:relative;" />
            <div class="user_big">
                <img src="@(string.IsNullOrEmpty(Model.Header) ? "/images/head.jpg" : Model.Header)"/>
            </div>
        </div>
            <ul class="mdui-list">
                <li class="mdui-list-item mdui-ripple">
                    <label class="mdui-text-color-theme-accent mdui-list-item-content">
                        用户名
                    </label>
                    <label class="mdui-text-color-grey-500">
                        @Html.DisplayFor(model => model.UserName)
                    </label>
                </li>
                <li class="mdui-list-item mdui-ripple">
                    <label class="mdui-text-color-theme-accent mdui-list-item-content">
                        邮箱
                    </label>
                    <label class="mdui-text-color-grey-500">
                        @Html.DisplayFor(model => model.Email)
                    </label>
                </li>
                <li class="mdui-list-item mdui-ripple">
                    <label class="mdui-text-color-theme-accent mdui-list-item-content">
                        昵称
                    </label>
                    <label class="mdui-text-color-grey-500">
                        @Html.DisplayFor(model => model.Nickname)
                    </label>
                </li>
                <li class="mdui-list-item mdui-ripple">
                    <label class="mdui-text-color-theme-accent mdui-list-item-content">
                        用户组
                    </label>
                    <label class="mdui-text-color-grey-500">
                        @(Model.Roles == 1 ? "管理员" : "普通用户")
                    </label>
                </li>
                <li class="mdui-list-item mdui-ripple">
                    <label class="mdui-text-color-theme-accent mdui-list-item-content">
                        性别
                    </label>
                    <label class="mdui-text-color-grey-500">
                        @(Model.Gender ? "女" : "男")
                    </label>
                </li>
                <li class="mdui-list-item mdui-ripple">
                    <label class="mdui-text-color-theme-accent mdui-list-item-content">
                        生日
                    </label>
                    <label class="mdui-text-color-grey-500">
                        @Html.DisplayFor(model => model.Birthday)
                    </label>
                </li>
                <li class="mdui-list-item mdui-ripple">
                    <label class="mdui-text-color-theme-accent mdui-list-item-content">
                        地址
                    </label>
                    <label class="mdui-text-color-grey-500">
                        @Html.DisplayFor(model => model.Address)
                    </label>
                </li>
                <li class="mdui-list-item mdui-ripple">
                    <label class="mdui-text-color-theme-accent mdui-list-item-content">个性签名</label>
                    <div class="mdui-text-color-grey-500">@Html.DisplayFor(model => model.Remark)</div>
                </li>
            </ul>
        </div>
        <p>
            <button type="button" class="mdui-btn mdui-color-theme-accent mdui-ripple mdui-btn-raised" onclick="javascript: history.go(-1);">返回</button>
        </p>
    </div>